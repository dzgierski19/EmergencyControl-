// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profession {
  id             String    @id @default(uuid())
  name           String
  role           Role
  workerLevel    Level
  email          String    @unique
  phoneNumber    Int
  Location       Location?
  currentEventId String?
  pastEvents     Event[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  deletedAt      DateTime?
}

model Location {
  latitude     Float
  longtitude   Float
  checkedAt    DateTime
  profession   Profession @relation(fields: [professionId], references: [id])
  professionId String     @unique
}

model Event {
  id             String     @id @default(uuid())
  title          String
  additionalInfo String?
  eventLevel     Level
  status         Status     @default(WAITING_FOR_ACTION)
  worker         Profession @relation(fields: [authorId], references: [id])
  authorId       String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime?
  deletedAt      DateTime?
}

enum Role {
  POLICEMAN
  FIREFIGHTER
  PARAMEDIC
  SOLDIER
}

enum Status {
  WAITING_FOR_ACTION
  IN_PROGRESS
  CANCELLED
  FINISHED
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
